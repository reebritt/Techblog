        <input name="post-title" type="text" value="{{post.title}}" class="form-input" />
        <input value="{{post.id}}" name="post-id" type="hidden"/>
        <label class="form-label" for="content">Content</label>
        <textarea name="content" type="text" value="{{post.content}}" class="form-input">{{post.content}}</textarea>
        <button type="submit" class="btn">Update Post</button>
        <button type="button" class="delete-post-btn">Delete Post</button>
        </form>
